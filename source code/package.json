{
    "name": "wintrol",
    "version": "1.2.0",
    "description": "Controller to Mouse mapper with console UI",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "rebuild": "electron-rebuild",
        "build": "electron-builder",
        "build:lite": "electron-builder --win portable --config.productName=\"Wintrol Lite\" --config.directories.output=\"dist/lite\""
    },
    "build": {
        "appId": "com.antigravity.wintrol",
        "files": [
            "src/**/*",
            "package.json"
        ],
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "build/icon.ico",
            "uninstallerIcon": "build/icon.ico",
            "installerHeaderIcon": "build/icon.ico"
        }
    },
    "keywords": [
        "electron",
        "controller",
        "mouse",
        "xinput"
    ],
    "author": "Antigravity",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "electron-rebuild": "^3.2.9",
        "jimp": "^0.22.12",
        "png-to-ico": "^2.1.8",
        "to-ico": "^1.1.5"
    },
    "dependencies": {
        "koffi": "^2.6.0"
    }
}